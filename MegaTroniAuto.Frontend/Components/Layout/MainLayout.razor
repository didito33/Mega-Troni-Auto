@inherits LayoutComponentBase
@using MudBlazor

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="2">
        <MudText Typo="Typo.h6">MegaTroni Auto</MudText>
    </MudAppBar>

    <MudMainContent>
        <MudDialogProvider />
        <MudSnackbarProvider MaxDisplayedSnacks="3">
            @Body
        </MudSnackbarProvider>
    </MudMainContent>

    <MudPaper Class="pa-4 mt-6 text-center" Elevation="0">
        <MudText Typo="Typo.caption">© 2025 MegaTroni Auto</MudText>
    </MudPaper>
</MudLayout>
